{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "debug",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/dist/index.js",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true,
        "runtimeArgs": ["--no-warnings", "--experimental-specifier-resolution=node"]
      },
      
    ]
  }